
<h1>User info</h1>

<%= image_tag user.get_profile_image(100,100) %>

<table class="table">

  <tr>
  <th>name</th>
  <th><%=user.name%></th></tr>
  <tr>
  <th>introduction</th>
  <th><%=user.introduction%></th></tr>
   </table>
    <%=link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block edit_user_31887" do%>
     <i class="fas fa-user-cog"></i>
    <%end%>





