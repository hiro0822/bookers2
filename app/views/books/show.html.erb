<div class="container">

 <div class="row">
   <div class="col-md-3">
 <%=render'side',user: @user,book: @book_new%>
   </div>
   <div class="col-md-8 offset-md-1">
<h1>Book detail</h1>

<table class="table table-striped">
<tbody>

<tr>

<td><%=link_to user_path(@user.id) do %>
 <%=image_tag @user.get_profile_image(80,80)%><br>
 <%=@user.name %>
 <%end%></td>


<td><%=@book.title%></td>

<td><%=@book.body%></td>

<% if @book.user==current_user%>

<td><%=link_to "Edit",edit_book_path(@book.id),class: "btn btn-success"%></td>


<td><%=link_to "Destroy", book_path(@book.id),class: "btn btn-danger", method: :delete %></td>

</tr>

<%end%>

  </tbody>
  </table>
  </div>
 </div>
</div>